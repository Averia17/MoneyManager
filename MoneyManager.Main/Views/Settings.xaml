<UserControl x:Class="MoneyManager.Main.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyManager.Main.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="SettingsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="LBText" TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!--PathIcon-->
        <Style x:Key="LBPath" TargetType="{x:Type Path}">
            <Setter Property="Fill" Value="#C2C3C3"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <DropShadowBitmapEffect x:Key="DropShadowListItem" Softness="2" ShadowDepth="1" Color="LightGray" Direction="260"/>
        <!--Listbox Item Style-->
        
    </UserControl.Resources>


    
    <Grid >
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="TextBlock.FontFamily" Value="Tahoma"/>
                <Setter Property="TextBlock.FontSize" Value="20"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#ffe8e6" >
                
            </Grid>
            <Grid Grid.Column="1" Margin="20, 5,0,0" Background="#ffe8e6" >
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Margin="20,0,0,0" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="24" Grid.Row="0" Text="{Binding CurrentAccount.Username}"></TextBlock>
                <Grid  Margin="20,0,0,0" Grid.Row="1" >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="Ваш начальный баланс"></TextBlock>
                        <TextBlock Margin="15,0,0,0" Text="{Binding CurrentAccount.Balance}"></TextBlock>

                    </StackPanel>
                    <StackPanel VerticalAlignment="Center" Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="Ваш текущий баланс"></TextBlock>
                        <TextBlock Margin="15,0,0,0" Text="{Binding Balance}"></TextBlock>

                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2"  Margin="20,0,0,0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="Email:"></TextBlock>
                        <TextBlock  Margin="15,0,0,0"  Text="{Binding CurrentAccount.Email}"></TextBlock>


                    </StackPanel>
                </Grid>

            </Grid>
           
        </Grid>
        <Grid Grid.Row="1" Background="#ffe8e6" Margin="0,20,0,0"> 
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" Text="Ваши повторяющиеся операции"></TextBlock>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Margin="15,0,0,0"
                            VerticalAlignment="Center" 
                             Command="{Binding UpdateViewCommand}" CommandParameter="CreateHistory"
                            Style="{DynamicResource MaterialDesignFloatingActionDarkButton}"
                            Content="{materialDesign:PackIcon Add}" 
                            ></Button>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" >

                <ListBox  ItemsSource="{Binding RepeatedHistories}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="BitmapEffect" Value="{StaticResource DropShadowListItem}"/>
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="Width" Value="800"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <Grid>
                                                
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="45*"/>
                                                    <ColumnDefinition Width="73*"/>
                                                    <ColumnDefinition Width="70*"/>
                                                    <ColumnDefinition Width="113*"/>
                                                    <ColumnDefinition Width="92*"/>
                                                    <ColumnDefinition Width="35*"/>
                                                    <ColumnDefinition Width="35*"/>
                                                </Grid.ColumnDefinitions>

                                                <!--Icon-->
                                                <!--<Path Width="36" Data="{Binding FileThumb}" Fill="{Binding Fill, TargetNullValue=#C2C3C3, FallbackValue=#C2C3C3}" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource LBPath}"/>-->

                                                <TextBlock Grid.Column="1" Text="{Binding Activity.Title}" Style="{StaticResource LBText}"/>
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" >
                                                    <TextBlock Text="{Binding Path=Amount}"  Style="{StaticResource LBText}"/>
                                                    <TextBlock Text=" рублей"  Style="{StaticResource LBText}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="3" Orientation="Horizontal" >
                                                    <TextBlock Text="{Binding Path=Date, StringFormat='{}{0:dd}'}"  Style="{StaticResource LBText}"/>
                                                    <TextBlock Text=" числа"  Style="{StaticResource LBText}"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="4"  Text="{Binding Description}" Style="{StaticResource LBText}" />



                                                <Button Grid.Column="5"  Margin="5" HorizontalAlignment="Right" BorderBrush="#545d78" Background="#8790ab" Command="{Binding DataContext.LinkToEditCommand, ElementName=SettingsView,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CommandParameter="{Binding}" Content="{materialDesign:PackIcon Kind=ModeEdit}" ></Button>
                                                <Button Grid.Column="6"  Margin="5" HorizontalAlignment="Right" BorderBrush="#ff0000" Background="#ff341a" Command="{Binding DataContext.DeleteCommand, ElementName=SettingsView,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CommandParameter="{Binding}" Content="{materialDesign:PackIcon Delete}" ></Button>

                                                <!--<TextBlock Grid.Column="1" Text="{Binding FileName}" Style="{StaticResource LBText}"/>
                                <TextBlock Grid.Column="2" Text="{Binding FileProgram}" Style="{StaticResource LBText}"/>
                                <TextBlock Grid.Column="3" Text="{Binding ModifiedOn}" Style="{StaticResource LBText}"/>
                                <TextBlock Grid.Column="4" Text="{Binding FileType}" Style="{StaticResource LBText}"/>-->


                                                <!--<Path Grid.Column="5" Data="{DynamicResource more}" Style="{StaticResource LBPath}" Width="15"/>
                                <Path Grid.Column="6" Data="{DynamicResource plus}" Style="{StaticResource LBPath}" Width="15"/>
                                <Path Grid.Column="7" Data="{DynamicResource Shared}" Style="{StaticResource LBPath}" Width="15"/>-->
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="White"/>

                                                <!--optional trigger, :P-->
                                                <Setter Property="Width" Value="805"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>


