        <Grid Margin="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" >
            <Button  
                        Command="{Binding UpdateViewCommand}" CommandParameter="CreateHistory" Background="#fb6a50" BorderBrush="#273d48"
                        Style="{DynamicResource MaterialDesignFloatingActionDarkButton}"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.Value="1" 
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        Content="{materialDesign:PackIcon Add}" 
                        />
        </Grid>
        <!--<DataGrid ItemsSource="{Binding histories}"  AutoGenerateColumns="False">
            <DataGrid.Columns>
               --><!--<DataGridCheckBoxColumn Binding="{Binding Path=IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></DataGridCheckBoxColumn>--><!--
                <DataGridTextColumn Header="" Binding="{Binding Path=Activity.Title}"></DataGridTextColumn>
                <DataGridTextColumn Header="" Binding="{Binding Path=Date}"></DataGridTextColumn>
                <DataGridTextColumn Header="" Binding="{Binding Path=Amount}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>-->
    </Grid>
</UserControl>


